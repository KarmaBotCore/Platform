{
    "name": "karma/platform",
    "type": "library",
    "description": "Bot platform kernel",
    "license": "MIT",
    "keywords": [
        "driver",
        "platform",
        "messages"
    ],
    "require": {
        "php": ">=7.1",
        "react/event-loop": "0.*",
        "nesbot/carbon": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Karma\\Platform\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "monolog/monolog": "~1.22"
    },
    "autoload-dev": {
        "psr-4": {
            "Karma\\Platform\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "monolog/monolog": "~1.22: Logging support"
    }
}
