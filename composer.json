{
    "name": "karma/platform",
    "type": "library",
    "description": "Bot platform kernel",
    "license": "MIT",
    "keywords": [
        "vk",
        "slack",
        "gitter",
        "bbcode",
        "github",
        "markdown",
        "messages",
        "telegram",
        "facebook",
        "normalization",
        "approximation"
    ],
    "require": {
        "php": ">=7.1",
        "react/event-loop": "~0.4",
        "illuminate/support": "5.*"
    },
    "autoload": {
        "psr-4": {
            "KarmaBot\\Platform\\": "src/"
        }
    },
    "suggest": {
        "monolog/monolog": "~1.22: Logging support",
        "serafim/gitter-api": "~4.0: Gitter system support"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "monolog/monolog": "~1.22"
    },
    "autoload-dev": {
        "psr-4": {
            "KarmaBot\\Platform\\Tests\\": "tests/"
        }
    }
}
